{
	"name": "Go",
	"build": {
        "dockerfile": "Dockerfile",
		"context": "../"
    },
	"runArgs": [
		"--name", "checkers"
    ],

	"customizations": {
		"vscode": {
			"settings": {},
			"extensions": [
				"golang.go",
				"zxh404.vscode-proto3"
			]
		}
	},
	"features": {
		"ghcr.io/devcontainers/features/git": {
			"version": "latest"
		}
	},

	"forwardPorts": [1317, 3000, 4500, 5000, 26657],
	"postCreateCommand": "go version"
}
